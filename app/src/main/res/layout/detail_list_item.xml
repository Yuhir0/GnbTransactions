<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="15dp"
    android:paddingHorizontal="30dp">

    <TextView
        android:id="@+id/detail_item_currency"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="EUR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/detail_item_value"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/detail_item_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="31.92"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/detail_item_value_icon"
        app:layout_constraintBottom_toTopOf="@id/detail_item_rate"
        app:layout_constraintStart_toEndOf="@id/detail_item_currency"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:gravity="end"
        />

    <TextView
        android:id="@+id/detail_item_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0.88"
        app:layout_constraintTop_toBottomOf="@id/detail_item_value"
        app:layout_constraintEnd_toStartOf="@id/detail_item_value_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/detail_item_currency"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:gravity="end"/>

    <ImageView
        android:id="@+id/detail_item_value_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toEndOf="@id/detail_item_value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:src="@drawable/arrow_up"/>



</androidx.constraintlayout.widget.ConstraintLayout>